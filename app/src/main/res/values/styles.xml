        <item name="android:textSize">@dimen/text_button</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/bg_input_border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hintGrey</item>
        <item name="android:fontFamily">@font/inter_font</item>
        <item name="android:textSize">@dimen/text_input</item>
        <item name="android:padding">16dp</item>
