<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".permission.presentations.PermissionFragment">

    <TextView
        android:id="@+id/tv_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/permission_descriptions"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="@dimen/text_h1"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/Iv_location_maps"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/img_maps" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_grant_permission"
        style="@style/primaryButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beri Lokasi" />
</LinearLayout>